<!DOCTYPE html>
<html>
  <head>
    <title>ReelMates</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <%# <%= render "shared/navbar" %>
  <%= render "shared/flashes" %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div data-controller="splash">
    <div id="splash-screen" data-splash-target="splash">
      <img src="<%= asset_path('logo-test.jpeg') %>" alt="Logo" />
    </div>

    <div id="main-content" data-splash-target="content" class="d-none">
      <%= yield %>
    </div>
  </div>

  </body>
</html>
