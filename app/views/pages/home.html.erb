<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 100vh; color: white;">
  <div class="row w-100">
    <div class="col-12 col-md-8 offset-md-2 ps-4 pe-4">
      <div class="text-center mb-5">
        <img src="<%= asset_path('logo.png') %>" alt="Logo" id="logo-home">
      </div>
      <div class="text-center mb-4">
        <p class="mb-4" style="letter-spacing: 1px; font-size: 0.7em; color: #000000;">
          By tapping Create Account or Sign In, you agree to our Terms. Learn how we process your data in our Privacy Policy and Cookies Policy.
        </p>
        <%= simple_form_for current_or_guest_user do |f| %>
<div class="avatar-selection-container" data-controller="avatar-selection">
            <div id="avatarCarousel" class="carousel slide" data-bs-touch="true" data-bs-interval="false">
              <div class="carousel-inner">
                <% Dir.glob("app/assets/images/avatars/*.png").each_with_index do |avatar_path, index| %>
                  <div class="carousel-item <%= 'active' if index.zero? %>" data-avatar-name="<%= File.basename(avatar_path) %>">
                    <%= image_tag "avatars/#{File.basename(avatar_path)}",
                        class: "d-block avatar-option mx-auto",
                        data: {
                          action: "click->avatar-selection#select",
                          avatar_name: File.basename(avatar_path)
                        } %>
                  </div>
                <% end %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#avatarCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#avatarCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
              </button>
            </div>
            <%= hidden_field_tag :avatar, 'default_avatar.png', data: { avatar_selection_target: "input" } %>
          </div>
          <div class="form-floating mb-3">
            <%= f.input :username,
              input_html: {
                class: "form-control rounded-pill mb-4 bg-transparent shadow w-100",
                placeholder: "Username"
              },
              label: false
            %>
          </div>
          <%= f.submit "CONTINUE AS A GUEST",
            class: "btn button-orange shadow w-100 fw-bold"
          %>
        <% end %>
      </div>
      <div class="text-center">
        <div class="or-divider">
          <span class="line"></span>
          <span class="or-text">OR</span>
          <span class="line"></span>
        </div>
      </div>
        <div class="text-center mt-2">
          <button class="btn button-orange shadow w-100 m-0 fw-bold mb-2">SIGN IN</button>
        </div>
        <div class="text-center mt-2">
          <button class="btn button-orange shadow w-100 m-0 fw-bold mb-2">CREATE ACCOUNT</button>
        </div>
    </div>
  </div>
